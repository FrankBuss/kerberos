; address offset for MIDI read/write access from $de00.
MIDI_ADDRESS = $de39

; MIDI configuration for MC68B50 and routing.
MIDI_CONFIG = $de3a
MIDI_CONFIG_IRQ_OFF = $00
MIDI_CONFIG_IRQ_ON = $01
MIDI_CONFIG_NMI_OFF = $00
MIDI_CONFIG_NMI_ON = $02
MIDI_CONFIG_CLOCK_500_KHZ = $00
MIDI_CONFIG_CLOCK_2_MHZ = $04
MIDI_CONFIG_THRU_IN_OFF = $00
MIDI_CONFIG_THRU_IN_ON = $08
MIDI_CONFIG_THRU_OUT_OFF = $00
MIDI_CONFIG_THRU_OUT_ON = $10
MIDI_CONFIG_ENABLE_OFF = $00
MIDI_CONFIG_ENABLE_ON = $20

; Controls the GAME/EXROM levels, LEDs and software reset.
CART_CONTROL = $de3b
CART_CONTROL_GAME_LOW = $00
CART_CONTROL_GAME_HIGH = $01
CART_CONTROL_EXROM_LOW = $00
CART_CONTROL_EXROM_HIGH = $02
CART_CONTROL_LED1_RX = $00
CART_CONTROL_LED1_ON = $04
CART_CONTROL_LED2_TX = $00
CART_CONTROL_LED2_ON = $08
CART_CONTROL_RESET_GENERATE = $10

; RAM and mode configurations.
CART_CONFIG = $de3c
CART_CONFIG_RAM_OFF = $00
CART_CONFIG_RAM_ON = $01
CART_CONFIG_KERNAL_HACK_OFF = $00
CART_CONFIG_KERNAL_HACK_ON = $02
CART_CONFIG_HIGHRAM_HACK_OFF = $00
CART_CONFIG_HIGHRAM_HACK_ON = $04
CART_CONFIG_EASYFLASH_OFF = $00
CART_CONFIG_EASYFLASH_ON = $08
CART_CONFIG_RAM_AS_ROM_OFF = $00
CART_CONFIG_RAM_AS_ROM_ON = $10
CART_CONFIG_BASIC_HACK_OFF = $00
CART_CONFIG_BASIC_HACK_ON = $20

; Address bits 20..13 for flash.
FLASH_ADDRESS_EXTENSION = $de3d

; Address bits 15..8 for RAM.
RAM_ADDRESS_EXTENSION = $de3e

; More address bits.
ADDRESS_EXTENSION2 = $de3f
ADDRESS_EXTENSION2_RAM_A16 = $01
ADDRESS_EXTENSION2_FLASH_A20 = $02
